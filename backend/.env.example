# ── Server ────────────────────────────────────────────────────
PORT=3000
NODE_ENV=development
APP_URL=http://localhost:3000

# ── Supabase ──────────────────────────────────────────────────
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ── JWT ───────────────────────────────────────────────────────
JWT_ACCESS_SECRET=change-me-access-secret
JWT_REFRESH_SECRET=change-me-refresh-secret

# ── Stripe ────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ── Resend (email) ────────────────────────────────────────────
RESEND_API_KEY=re_...
EMAIL_FROM=BlueWork <noreply@bluework.app>

# ── Storage (Supabase Storage bucket) ─────────────────────────
STORAGE_BUCKET=bluework-uploads

# ── SMS (Twilio) ───────────────────────────────────────────────
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# ── Web Push (VAPID) ───────────────────────────────────────────
# Generate once with: npx web-push generate-vapid-keys
# Never regenerate after launch — it invalidates all existing subscriptions
VAPID_EMAIL=admin@bluework.app
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ── Dev only ───────────────────────────────────────────────────
# Set to true to skip Twilio and always use OTP: 123456
USE_FAKE_OTP=true
